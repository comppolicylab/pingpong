############ pingpong (default) ############
server {
    listen ${NGINX_LISTEN} default_server;
    listen ${NGINX_LISTEN_SSL} ssl default_server;

    server_name pingpong.hks.harvard.edu;

    ssl_certificate ${NGINX_SSL_CERT};
    ssl_certificate_key ${NGINX_SSL_CERT_KEY};

    http2 on;

    gzip on;
    gzip_types text/html application/javascript application/json text/css image/svg+xml;
    gzip_comp_level 9;
    etag on;

    # pingpong root directory
    root /usr/share/nginx/html/pingpong;
    # Index / fallback page
    index index.html;

    location / {
        # Serve real files first, then fallback to index.
        try_files $uri $uri/ $uri.html /index.html;
    }

    location ~* \.(?:css|js|jpg|svg|png|woff|woff2|ttf)$ {
        expires 30d;
        add_header Cache-Control "public";
    }
}

